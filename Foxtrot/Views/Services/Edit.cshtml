@model Foxtrot.Models.Service

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Service</h4>
<hr />
<div class="card card-shadow card-padding">
    <div class="card-header white">
        <span class="card-title">Edit service</span>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div class="form-group">
              <label for="Id">Id</label>
              <input readonly asp-for="Id" class="form-control" id="Id">
            </div>
            <div class="form-group">
              <label for="Name">Name</label>
              <input asp-for="Name" class="form-control" id="Name">
            </div>
            <div class="form-group"> 
                <label for="Duration">Duration</label>
              <input type="number" asp-for="Duration" class="form-control" id="Duration">
            </div>
            <button type="submit" class="btn btn-primary align-button-right">Save</button>
          </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
