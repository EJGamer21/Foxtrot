@model Foxtrot.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="card card-shadow card-padding">
    <div class="card-header white">
        <span class="card-title">Edit User</span>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div class="form-group">
              <label for="Id">Id</label>
              <input readonly asp-for="Id" class="form-control" id="Id">
            </div>
            <div class="form-group">
              <label for="FullName">FullName</label>
              <input asp-for="FullName" class="form-control" id="FullName">
            </div>
            <div class="form-group">
              <label for="Email">Email</label>
              <input asp-for="Email" class="form-control" id="Email">
            </div>
            <div class="form-group">
                <label for="Address">Address</label>
                <textarea class="form-control" asp-for="Address" id="Address" rows="3"></textarea>
            </div>
            <div class="form-group">
                <label for="Dni">Dni</label>
                <input asp-for="Dni" class="form-control" id="Dni">
            </div>
            <div class="form-group">
                @*<label for="RoleId">Role</label>*@
                @*<select asp-for="Roles" name="RoleId" id="RoleId" asp-items="">
                    <option value="" selected="">Please select...</option>
                    @foreach (var role in ViewData["Roles"])
                    {
                        <option value="@role.Id">@role.Name</option>
                    }
                </select>*@
            </div>
            <button type="submit" class="btn btn-primary align-button-right">Save</button>
          </form>
    </div>
</div>

